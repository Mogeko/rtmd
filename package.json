{
	"name": "rtmd",
	"displayName": "Real Time Markdown",
	"description": "Render Markdown in real time in VSCode.",
	"version": "0.0.1",
	"license": "MIT",
	"publisher": "mogeko",
	"keywords": [
		"markdown",
		"md"
	],
	"author": {
		"email": "zhengjunyi@live.com",
		"name": "Mogeko"
	},
	"readme": "./README.md",
	"extensionKind": [
		"ui",
		"workspace",
		"web"
	],
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Programming Languages",
		"Visualization",
		"Other"
	],
	"activationEvents": [
		"onLanguage:markdown",
		"onCustomEditor:mogeko.muyaEditor"
	],
	"bugs": {
		"url": "https://github.com/Mogeko/vscode-rtmd/issues",
		"email": "zhengjunyi@live.com"
	},
	"homepage": "https://github.com/Mogeko/vscode-rtmd",
	"repository": {
		"type": "git",
		"url": "https://github.com/Mogeko/vscode-rtmd.git"
	},
	"main": "./dist/extension.js",
	"contributes": {
		"customEditors": [
			{
				"viewType": "mogeko.muyaEditor",
				"displayName": "Muya Editor",
				"selector": [
					{
						"filenamePattern": "*.md"
					}
				],
				"priority": "default"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.59.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	},
	"dependencies": {
		"muya": "^0.1.2"
	}
}
